{
    "name": "src",
    "description": "TypeScript source for pagy.js",
    "private": true,
    "devDependencies": {
        "parcel": "^2.1.1"
    },
    "browserslist": [">0.25%", "not dead"],
    "pagy": "../lib/javascripts/pagy.js",
    "targets": {
        "pagy": {
            "source": "main.js",
            "outputFormat": "global",
            "sourceMap": false
        }
    },
    "scripts": {
        "finalize": "mv pagy.js ../lib/javascripts/pagy.mjs && head -n -1 ../lib/javascripts/pagy.mjs > ../lib/javascripts/pagy-dev.js",
        "build": "tsc && parcel build && npm run finalize",
        "lint-fix": "eslint . --fix --ext .ts"
    }
}
