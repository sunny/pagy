        "activerecord",
        "arel",
        "bulma",
        "Codecov",
        "ddnexus",
        "Demichelis",
        "Domizio",
        "Gitter",
        "haml",
        "javascripts",
        "Kaminari",
        "meilisearch",
        "minimalistic",
        "mongoid",
        "navless",
