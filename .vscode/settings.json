    "markdownlint.run": "onType",
    // available in the container
    "terminal.integrated.profiles.linux": {
        "bash": {
            "icon": "terminal-bash",
            "path": "bash"
        }
    },
    "trailing-spaces.highlightCurrentLine": false,
    "trailing-spaces.trimOnSave": true
}
