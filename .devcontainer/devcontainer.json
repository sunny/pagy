// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.191.1/containers/docker-existing-docker-compose
// If you want to run as a non-root user in the container, see .devcontainer/docker-compose.yml.

// pagy-on-docker: we try to use VSC config as less as possible, limiting it to the VSC specific stuff
// in order to get docker/docker-compose files/config as portable as possible between editors, IDEs or CLI.
// This file should giver you all the basic extensions and setting for developing pagy
// You can comment/uncomment the following entries:
// --> docker-compose-backport.yml runs on ruby 2.7 and can be used in place of docker-compose.yml
// --> docker-compose.yml alone must ensure "runServices" contains only "pagy"
// --> docker-compose.yml + run-test-app.yml must be run
//     if you run all also cypress in test mode
// --> open-cypress.yml require the pgy-cypress service and the "run-test-app.yml"
// Full details https://github.com/ddnexus/pagy/tree/master/pagy-on-docker
{
    "dockerComposeFile": [
		// "../pagy-on-docker/docker-compose-backport.yml
        "../pagy-on-docker/docker-compose.yml",
        // "../pagy-on-docker/run-test-app.yml",
		// "./pagy-on-docker/open-cypress.yml"

    ],
    "extensions": [
		"antfu.browse-lite",
		"castwide.solargraph",
		"davidanson.vscode-markdownlint",
		"eamodio.gitlens",
		"jdforsythe.add-new-line-to-files",
		"kaiwood.endwise",
		"koichisasada.vscode-rdbg",
		"mhutchie.git-graph",
		"misogi.ruby-rubocop",
		"msjsdiag.debugger-for-edge",
		"rangav.vscode-thunder-client",
		"rebornix.ruby",
		"shardulm94.trailing-spaces",
		"streetsidesoftware.code-spell-checker",
		"tht13.html-preview-vscode",
		"tnrich.vscode-extension-open-cypress",
		"wingrunr21.vscode-ruby",
		"yzhang.markdown-all-in-one"
	],
    "name": "pagy",
	// comment the following to run all the services, but enable the dockerComposeFile files that you need
	"runServices": ["pagy", "pagy-jekyll"],
    "service": "pagy",
    "settings": {
    },
    "workspaceFolder": "/opt/project"
}
